<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Citizen Report</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9fafb;
        }

        /* Style for the sidebar scrollbar */
        .sidebar::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: #4a5568;
            border-radius: 10px;
        }

        .sidebar::-webkit-scrollbar-track {
            background-color: #2d3748;
        }
    </style>
</head>

<body>

    <!-- ===== START: Sidebar ===== -->
     <%- include('partials/sidebar.ejs') %>
    <!-- ===== END: Sidebar ===== -->

    <!-- ===== START: Main Content Wrapper ===== -->
    <div class="lg:pl-64">

        <!-- ===== START: Navbar ===== -->
        <%- include('partials/navbar.ejs') %>
        <!-- ===== END: Navbar ===== -->

        <!-- ===== START: Report Review Page Content ===== -->
        <main class="p-6">
            <div class="max-w-7xl mx-auto">
                <!-- Header -->
                <div class="mb-6 flex flex-wrap items-center justify-between">
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Review Citizen Report</h1>
                        <p class="text-sm text-gray-500 mt-1">Report ID: <span class="font-mono">REP-20250921-00128</span></p>
                    </div>
                    <div class="text-right mt-4 sm:mt-0">
                        <p class="text-sm font-medium text-gray-600">Sunday, September 21, 2025</p>
                        <p class="text-xs text-gray-500">1:43 PM IST</p>
                    </div>
                </div>

                <!-- Main Grid Layout -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                    <!-- Left Column -->
                    <div class="lg:col-span-2 space-y-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Submitted Images (2)</h3>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div>
                                    <img src="https://placehold.co/600x400/a5b4fc/4338ca?text=Water+Logging"
                                        alt="Primary evidence of coastal flooding"
                                        class="rounded-lg w-full h-auto object-cover border">
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <img src="https://placehold.co/300x200/c7d2fe/4338ca?text=Overflowing+Drain"
                                        alt="Secondary evidence"
                                        class="rounded-lg w-full h-auto object-cover border cursor-pointer hover:opacity-80 transition">
                                    <div
                                        class="rounded-lg w-full bg-gray-100 flex items-center justify-center border text-sm text-gray-500">
                                        No more images</div>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white p-6 rounded-lg shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Citizen's Description</h3>
                            <div class="prose prose-sm max-w-none text-gray-700">
                                <p>"Heavy water logging near Marine Drive due to the high tide and continuous rain. The
                                    sea wall is overflowing in some parts and water is entering the main road. Traffic
                                    is moving very slowly. This happens every monsoon but seems worse today."</p>
                            </div>
                            <h4 class="text-md font-semibold text-gray-800 mt-6 mb-3">User-Selected Tags</h4>
                            <div class="flex flex-wrap gap-2">
                                <span
                                    class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-medium text-blue-800">#CoastalFlooding</span>
                                <span
                                    class="inline-flex items-center rounded-full bg-yellow-100 px-3 py-1 text-xs font-medium text-yellow-800">#HighTide</span>
                                <span
                                    class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-800">#WaterLogging</span>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="lg:col-span-1 space-y-6">
                        <div class="bg-white p-6 rounded-lg shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Submitter Details</h3>
                            <div class="flex items-center space-x-3 mb-4">
                                <span
                                    class="h-12 w-12 rounded-full flex items-center justify-center bg-indigo-100 text-indigo-800 font-bold text-xl">RK</span>
                                <div>
                                    <p class="font-semibold text-gray-800">R. Kulkarni</p>
                                    <p class="text-xs text-gray-500">Member since: Jan 2024</p>
                                </div>
                            </div>
                            <div class="bg-indigo-50 border border-indigo-200 p-4 rounded-lg">
                                <p class="text-sm font-medium text-indigo-800">User Veracity Score</p>
                                <p class="text-3xl font-bold text-indigo-600">82%</p>
                                <p class="text-xs text-indigo-700 mt-1">Based on 14 previous verified reports.</p>
                            </div>
                        </div>

                        <div class="bg-white p-6 rounded-lg shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Report Data</h3>
                            <ul class="space-y-3 text-sm">
                                <li class="flex justify-between"><span
                                        class="font-medium text-gray-600">Location:</span><span
                                        class="text-gray-800 text-right">Marine Drive, Mumbai</span></li>
                                <li class="flex justify-between"><span class="font-medium text-gray-600">Hazard
                                        Type:</span><span class="text-gray-800 text-right">Flooding</span></li>
                                <li class="flex justify-between"><span
                                        class="font-medium text-gray-600">Severity:</span><span
                                        class="text-gray-800 text-right font-semibold text-orange-600">Moderate</span>
                                </li>
                                <li class="flex justify-between"><span class="font-medium text-gray-600">Observed
                                        At:</span><span class="text-gray-800 text-right">Sep 21, 2025, 1:15 PM</span>
                                </li>
                                <li class="flex justify-between items-center"><span
                                        class="font-medium text-gray-600">Status:</span><span
                                        class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">Pending
                                        Verification</span></li>
                            </ul>
                        </div>

                        <div class="bg-white p-6 rounded-lg shadow-sm">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Admin Actions</h3>
                            <div class="space-y-3">
                                <button
                                    class="w-full inline-flex justify-center items-center px-4 py-2.5 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                        viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Verify Report
                                </button>
                                <button
                                    class="w-full inline-flex justify-center items-center px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                        viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                                    </svg>
                                    Dismiss Report
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- ===== END: Report Review Page Content ===== -->

    </div>
    <!-- ===== END: Main Content Wrapper ===== -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('menu-toggle');
            const sidebar = document.getElementById('sidebar');
            const profileMenuButton = document.getElementById('profile-menu-button');
            const profileMenu = document.getElementById('profile-menu');

            // Toggle sidebar on mobile
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', function () {
                    sidebar.classList.toggle('-translate-x-full');
                });
            }

            // Toggle profile dropdown
            if (profileMenuButton && profileMenu) {
                profileMenuButton.addEventListener('click', function (event) {
                    profileMenu.classList.toggle('hidden');
                    event.stopPropagation();
                });
            }

            // Close dropdown when clicking outside
            document.addEventListener('click', function (event) {
                if (profileMenu && !profileMenu.classList.contains('hidden') && !profileMenu.contains(event.target) && !profileMenuButton.contains(event.target)) {
                    profileMenu.classList.add('hidden');
                }
            });
        });
    </script>

</body>

</html>