                    // Update trend
                    const trendElement = cardElement.querySelector('.kpi-trend');
                    const change = newValue - oldValue;
                    const percentage = Math.abs(Math.round((change / oldValue) * 100));

                    if (change > 0) {
                        trendElement.className = 'kpi-trend up';
                        trendElement.innerHTML = `<i class="ph-trend-up"></i><span>${percentage}% increase</span>`;
                    } else if (change < 0) {
                        trendElement.className = 'kpi-trend down';
                        trendElement.innerHTML = `<i class="ph-trend-down"></i><span>${percentage}% decrease</span>`;
                    }

                    setTimeout(() => {
                        valueElement.classList.remove('value-update');
                    }, 600);
                }
            }

            function simulateKPIUpdates() {
                const kpiCards = document.querySelectorAll('.kpi-card');

                kpiCards.forEach(card => {
                    const currentValue = parseInt(card.querySelector('.kpi-value').textContent);
                    const maxChange = Math.max(1, Math.floor(currentValue * 0.1)); // Max 10% change
                    const change = Math.floor(Math.random() * (maxChange * 2 + 1)) - maxChange;
                    const newValue = Math.max(0, currentValue + change);

                    // Only update if there's a meaningful change
                    if (Math.abs(change) > 0) {
                        updateKPIValue(card, newValue);
                    }
                });
            }

            // Add hover effects for KPI cards
            function initializeKPIEffects() {
                document.querySelectorAll('.kpi-card').forEach(card => {
                    card.addEventListener('mouseenter', function () {
                        addSparkleEffect(this);
                    });
                });
            }

            // Initialize dashboard
            async function initializeDashboard() {
                reports = await fetchReportData();
                populateTriageQueue();
                initializeMapControls();
                initializeSidebar();
                initializeMap();
                initializeKPIEffects();
                updateDate(); // Call the new date function

                // Set up intervals
                setInterval(simulateKPIUpdates, 8000); // Update KPIs every 8 seconds
            }

            document.addEventListener('DOMContentLoaded', initializeDashboard);
        </script>

