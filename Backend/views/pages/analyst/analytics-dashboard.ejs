            }, {
                id: 'INF-08-982',
                priority: 'low',
                summary: 'Unusual fishing activity near international maritime boundary line.',
                location: '22.57° N, 68.96° E',
                time: '3 hrs ago',
                description: 'Satellite imagery shows a cluster of over 15 fishing boats near the IMBL. Monitoring the situation for any potential violations or unusual activity.',
                coordinates: [68.96, 22.57]
            }];

            const map = new mapboxgl.Map({
                container: 'map',
                style: 'mapbox://styles/mapbox/streets-v12', // Basic street map style
                center: [72.8, 18.9], // Center on the primary incident
                zoom: 8
            });

            map.on('load', () => {
                // Use a timeout to get the computed style of the CSS variables
                setTimeout(() => {
                    const computedStyle = getComputedStyle(document.documentElement);
                    const priorityColorMap = {
                        critical: computedStyle.getPropertyValue('--status-critical').trim(),
                        medium: '#f59e0b',
                        low: computedStyle.getPropertyValue('--status-positive').trim()
                    };

                    const geojsonPoints = {
                        type: 'FeatureCollection',
                        features: reports.map(report => ({
                            type: 'Feature',
                            geometry: {
                                type: 'Point',
                                coordinates: report.coordinates
                            },
                            properties: {
                                title: report.id,
                                summary: report.summary,
                                priority: report.priority,
                                color: priorityColorMap[report.priority] || '#22c55e'
                            }
                        }))
                    };

                    map.addSource('report-locations', {
                        type: 'geojson',
                        data: geojsonPoints
                    });

                    map.addLayer({
                        id: 'report-points-layer',
                        type: 'circle',
                        source: 'report-locations',
                        paint: {
                            'circle-radius': 10,
                            'circle-color': ['get', 'color'],
                            'circle-stroke-width': 2,
                            'circle-stroke-color': '#ffffff'
                        }
                    });

                    const popup = new mapboxgl.Popup({
                        closeButton: false,
                        closeOnClick: false
                    });

                    map.on('mouseenter', 'report-points-layer', (e) => {
                        map.getCanvas().style.cursor = 'pointer';
                        const coordinates = e.features[0].geometry.coordinates.slice();
                        const props = e.features[0].properties;
                        const popupHTML = `<div style="padding: 5px;"><div style="font-weight: bold; font-size: 14px; color: #0c4a6e;">${props.title}</div><div style="font-size: 12px; color: #3c8db4;">${props.summary}</div></div>`;

                        while (Math.abs(e.lngLat.lng - coordinates[0]) > 180) {
                            coordinates[0] += e.lngLat.lng > coordinates[0] ? 360 : -360;
                        }
                        popup.setLngLat(coordinates).setHTML(popupHTML).addTo(map);
                    });

                    map.on('mouseleave', 'report-points-layer', () => {
                        map.getCanvas().style.cursor = '';
                        popup.remove();
                    });

                    map.on('click', 'report-points-layer', (e) => {
                        const coordinates = e.features[0].geometry.coordinates.slice();
                        map.flyTo({
                            center: coordinates,
                            zoom: 11,
                            speed: 1.2
                        });
                    });

                }, 0);


                // Add navigation controls (zoom, rotation)
                map.addControl(new mapboxgl.NavigationControl(), 'top-right');
            });

